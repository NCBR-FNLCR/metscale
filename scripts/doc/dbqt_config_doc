[import_locs]
path_to_db_import_manifest = ${paths:working_folder}/db_import_manifest.txt
refseq_folder = ${paths:db_folder}/refseq/catalog_taxid


[formats]
# Each of these defines a format for pulling taxon ids from a delimited text file.
#   They must be written as a valid python string containing a tuple. The fields
#   in each tuple are: 1) delimiter, 2) column (0-indexed), 3) # of header rows to
#   skip.
accn2taxid = ('\t', 2, 1)
kraken2_inspect = ('\t', 4, 0)
first_col = ('\t', 0, 0)
refseq = ('\t', 0, 0)
seqid2taxid = ('\t', 1, 0)

[db_source_files]
# Each of these entries gives the name and path to a delimited-text file with a column containing all the taxon IDs
#   in that database. The same set of names must occur in the [db_source_formats] section below with the name of a
#   valid format.
RefSeq =    ${paths:db_folder}/refseq/catalog_taxid
minikraken_20171019_8GB = ${paths:db_folder}/krakenuniq/seqid2taxid.map
minikraken2_v2_8GB_201904_UPDATE = ${paths:db_folder}/kraken/kraken2_inspect_wzerocounts.txt
kaiju_db_nr_euk = ${paths:db_folder}/kaiju/nr_euk_2017_seqnames_fromPeter/kaiju_db_nr_euk_origUniqTaxa.txt
NCBI_nucl_gb = ${paths:db_folder}/ncbi_taxonomy/accn2taxid_orig/nucl_gb.accession2taxid
NCBI_nucl_wgs = ${paths:db_folder}/ncbi_taxonomy/accn2taxid_orig/nucl_wgs.accession2taxid

[db_source_formats]
# This must include one of the names from the [formats] section, followed by either a 1 or 0 (assumed to be 1 if
#   omitted). If the latter is 0, the database is skipped.
RefSeq = refseq 0
minikraken_20171019_8GB = seqid2taxid 0
minikraken2_v2_8GB_201904_UPDATE = kraken2_inspect 0
